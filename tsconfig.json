{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,    
      "sourceMap": false,
      "alwaysStrict": true,
      "allowJs": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "typeRoots": [
        "./node_modules/@types",
        "./src/typings"
      ],
      "noImplicitAny": false,
    },
    "include": ["./src/**/*.ts", "./src/**/*.d.ts", "./src/**/*.js", "./src/**/*.json", "*.ts", "*.js"],
    "exclude": ["node_modules/**", "tsconfig.json"]
  }